{
  "name": "tulealtapp-backend",
  "version": "1.0.0",
  "description": "Monorepo backend con NestJS y arquitectura hexagonal",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "format:code": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\" && eslint \"{apps,libs}/**/*.ts\" --fix",
    "start:admin": "nest start admin-api --watch",
    "start:partner": "nest start partner-api --watch",
    "start:customer": "nest start customer-api --watch",
    "start:all": "concurrently \"npm run start:admin\" \"npm run start:partner\" \"npm run start:customer\" --names \"admin,partner,customer\" --prefix-colors \"blue,green,yellow\"",
    "start:dev:admin": "nest start admin-api --watch --debug",
    "start:dev:partner": "nest start partner-api --watch --debug",
    "start:dev:customer": "nest start customer-api --watch --debug",
    "start:dev:all": "concurrently \"npm run start:dev:admin\" \"npm run start:dev:partner\" \"npm run start:dev:customer\" --names \"admin,partner,customer\" --prefix-colors \"blue,green,yellow\"",
    "start:prod:admin": "node dist/apps/admin-api/main",
    "start:prod:partner": "node dist/apps/partner-api/main",
    "start:prod:customer": "node dist/apps/customer-api/main",
    "start:prod:all": "concurrently \"npm run start:prod:admin\" \"npm run start:prod:partner\" \"npm run start:prod:customer\" --names \"admin,partner,customer\" --prefix-colors \"blue,green,yellow\"",
    "lint": "eslint \"{apps,libs}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/admin-api/test/jest-e2e.json",
    "docker:build": "docker-compose build",
    "docker:build:prod": "docker-compose -f docker-compose.prod.yml build",
    "docker:up": "docker-compose up -d",
    "docker:up:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:down": "docker-compose down",
    "docker:down:prod": "docker-compose -f docker-compose.prod.yml down",
    "docker:logs": "docker-compose logs -f",
    "docker:logs:prod": "docker-compose -f docker-compose.prod.yml logs -f",
    "docker:restart": "docker-compose restart",
    "docker:restart:prod": "docker-compose -f docker-compose.prod.yml restart",
    "docker:clean": "docker-compose down -v --rmi all",
    "docker:clean:prod": "docker-compose -f docker-compose.prod.yml down -v --rmi all",
    "seed": "ts-node -r tsconfig-paths/register libs/infrastructure/src/seeds/seed-runner.ts",
    "seed:all": "npm run seed all",
    "seed:admin": "npm run seed admin",
    "seed:partner": "npm run seed partner",
    "seed:customer": "npm run seed customer",
    "seed:country": "npm run seed country",
    "seed:currency": "npm run seed currency",
    "seed:catalog": "npm run seed catalog",
    "seed:profiles": "npm run seed profiles",
    "seed:permissions": "npm run seed permissions",
    "migration:generate": "TS_NODE_PROJECT=tsconfig.typeorm.json ts-node --transpile-only -r tsconfig-paths/register node_modules/typeorm/cli-ts-node-commonjs.js migration:generate -d libs/infrastructure/src/persistence/data-source.ts",
    "migration:create": "TS_NODE_PROJECT=tsconfig.typeorm.json ts-node --transpile-only -r tsconfig-paths/register node_modules/typeorm/cli-ts-node-commonjs.js migration:create",
    "migration:run": "TS_NODE_PROJECT=tsconfig.typeorm.json ts-node --transpile-only -r tsconfig-paths/register node_modules/typeorm/cli-ts-node-commonjs.js migration:run -d libs/infrastructure/src/persistence/data-source.ts",
    "migration:revert": "TS_NODE_PROJECT=tsconfig.typeorm.json ts-node --transpile-only -r tsconfig-paths/register node_modules/typeorm/cli-ts-node-commonjs.js migration:revert -d libs/infrastructure/src/persistence/data-source.ts",
    "migration:show": "TS_NODE_PROJECT=tsconfig.typeorm.json ts-node --transpile-only -r tsconfig-paths/register node_modules/typeorm/cli-ts-node-commonjs.js migration:show -d libs/infrastructure/src/persistence/data-source.ts",
    "s3:init": "ts-node -r tsconfig-paths/register libs/infrastructure/src/storage/s3-init.ts",
    "script:generate-commissions": "ts-node -r tsconfig-paths/register libs/infrastructure/src/scripts/generate-commissions-for-billing-cycles.ts",
    "script:validate-permissions": "ts-node -r tsconfig-paths/register libs/infrastructure/src/scripts/validate-permissions-integrity.ts",
    "script:migrate-profile-permissions": "ts-node -r tsconfig-paths/register libs/infrastructure/src/scripts/migrate-profile-permissions.ts",
    "script:migrate-reward-rules-json": "ts-node -r tsconfig-paths/register libs/infrastructure/src/scripts/migrate-reward-rules-json-to-relational.ts",
    "script:migrate-loyalty-programs-json": "ts-node -r tsconfig-paths/register libs/infrastructure/src/scripts/migrate-loyalty-programs-json-to-relational.ts",
    "script:migrate-users-json": "ts-node -r tsconfig-paths/register libs/infrastructure/src/scripts/migrate-users-json-to-relational.ts",
    "script:migrate-tier-benefits-json": "ts-node -r tsconfig-paths/register libs/infrastructure/src/scripts/migrate-tier-benefits-json-to-relational.ts",
    "script:migrate-customer-tiers-json": "ts-node -r tsconfig-paths/register libs/infrastructure/src/scripts/migrate-customer-tiers-json-to-relational.ts",
    "script:validate-customer-partners": "ts-node -r tsconfig-paths/register libs/infrastructure/src/scripts/validate-customer-partners-migration.ts",
    "script:validate-base-enrollments": "ts-node -r tsconfig-paths/register libs/infrastructure/src/scripts/validate-and-fix-base-enrollments.ts",
    "script:recalculate-subscription-usage": "ts-node -r tsconfig-paths/register libs/infrastructure/src/scripts/recalculate-subscription-usage.ts",
    "script:refresh-analytics": "ts-node -r tsconfig-paths/register libs/infrastructure/src/scripts/refresh-tenant-analytics.ts",
    "script:test-email": "ts-node -r tsconfig-paths/register libs/infrastructure/src/scripts/test-email.ts",
    "script:clean-db": "ts-node -r tsconfig-paths/register libs/infrastructure/src/scripts/clean-database.ts",
    "script:reset-db": "ts-node -r tsconfig-paths/register libs/infrastructure/src/scripts/reset-database.ts",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "security:fix-force": "npm audit fix --force",
    "security:check": "npm audit --audit-level=moderate"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.956.0",
    "@aws-sdk/s3-request-presigner": "^3.956.0",
    "@nestjs/common": "^11.0.16",
    "@nestjs/core": "^11.0.16",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.16",
    "@nestjs/schedule": "^6.1.0",
    "@nestjs/swagger": "^11.2.5",
    "@nestjs/typeorm": "^11.0.0",
    "@types/nodemailer": "^7.0.4",
    "@types/passport-jwt": "^4.0.1",
    "@types/pdfkit": "^0.17.4",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dotenv": "^16.3.1",
    "mariadb": "^3.2.0",
    "mysql2": "^3.15.3",
    "nodemailer": "^7.0.12",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pdfkit": "^0.17.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "stripe": "^20.1.0",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.16",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.16",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.3.1",
    "@types/stripe": "^8.0.416",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "overrides": {
    "lodash": "^4.17.23",
    "tar": "^7.5.6"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@libs/domain$": "<rootDir>/libs/domain/src/index",
      "^@libs/domain/(.*)$": "<rootDir>/libs/domain/src/$1",
      "^@libs/application$": "<rootDir>/libs/application/src/index",
      "^@libs/application/(.*)$": "<rootDir>/libs/application/src/$1",
      "^@libs/infrastructure$": "<rootDir>/libs/infrastructure/src/index",
      "^@libs/infrastructure/(.*)$": "<rootDir>/libs/infrastructure/src/$1",
      "^@libs/shared$": "<rootDir>/libs/shared/src/index",
      "^@libs/shared/(.*)$": "<rootDir>/libs/shared/src/$1"
    }
  }
}
